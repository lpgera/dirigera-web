{
  "name": "tradfri-web-ui",
  "private": true,
  "homepage": ".",
  "engines": {
    "node": "^19.0.0",
    "npm": ">8.0.0"
  },
  "volta": {
    "node": "19.8.1"
  },
  "scripts": {
    "watch:frontend": "react-scripts start",
    "build:frontend": "react-scripts build",
    "authenticate": "node -r @swc/register -r dotenv/config ./server/tradfri/authenticate.ts",
    "server": "node -r dotenv/config ./server/index.js",
    "watch:backend": "nodemon --ext ts,json --watch server --exec node -r @swc/register -r dotenv/config ./server/index.ts",
    "build:backend": "swc server -d server",
    "generate": "graphql-codegen -r dotenv/config",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepare": "husky install",
    "check-updates": "ncu -i",
    "browserslist-update": "browserslist --update-db"
  },
  "dependencies": {
    "@graphql-tools/schema": "^9.0.17",
    "@graphql-tools/utils": "^9.2.1",
    "@lpgera/ts-env": "^1.2.3",
    "apollo-server": "^3.12.0",
    "apollo-server-express": "^3.12.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "graphql-tag": "^2.12.6",
    "jsonwebtoken": "^9.0.0",
    "node-tradfri-client": "^3.2.0",
    "react-scripts": "^5.0.1",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@apollo/client": "^3.7.10",
    "@graphql-codegen/cli": "^3.2.2",
    "@graphql-codegen/near-operation-file-preset": "^2.5.0",
    "@graphql-codegen/typescript": "^3.0.2",
    "@graphql-codegen/typescript-operations": "^3.0.2",
    "@graphql-codegen/typescript-resolvers": "^3.1.1",
    "@storybook/addon-essentials": "^7.0.2",
    "@storybook/addon-interactions": "^7.0.2",
    "@storybook/addon-links": "^7.0.2",
    "@storybook/blocks": "^7.0.2",
    "@storybook/preset-create-react-app": "^7.0.2",
    "@storybook/react": "^7.0.2",
    "@storybook/react-webpack5": "^7.0.2",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.44",
    "@swc/register": "^0.1.10",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.15.11",
    "@types/react": "^18.0.31",
    "@types/react-dom": "^18.0.11",
    "@types/ws": "^8.5.4",
    "antd": "^5.3.3",
    "chromatic": "^6.17.2",
    "husky": "^8.0.3",
    "nodemon": "^2.0.22",
    "npm-check-updates": "^16.9.0",
    "prettier": "^2.8.7",
    "pretty-quick": "^3.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.8.0",
    "react-use-websocket": "^4.3.1",
    "storybook": "^7.0.2",
    "storybook-addon-apollo-client": "^4.1.4",
    "typescript": "^4.9.5"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  }
}
