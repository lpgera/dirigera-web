{
  "name": "tradfri-web-ui",
  "private": true,
  "homepage": ".",
  "engines": {
    "node": "^18.0.0",
    "npm": "^8.5.0"
  },
  "scripts": {
    "watch:frontend": "react-scripts start",
    "build:frontend": "react-scripts build",
    "authenticate": "node -r @swc/register -r dotenv/config ./server/tradfri/authenticate.ts",
    "server": "node -r dotenv/config ./server/index.js",
    "watch:backend": "nodemon --ext ts,json --watch server --exec node -r @swc/register -r dotenv/config ./server/index.ts",
    "build:backend": "swc server -d server",
    "generate": "graphql-codegen -r dotenv/config",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "prepare": "husky install",
    "check-updates": "ncu",
    "check-updates-interactive": "ncu -i"
  },
  "dependencies": {
    "@lpgera/ts-env": "^1.2.1",
    "apollo-server": "^3.10.2",
    "apollo-server-express": "^3.10.2",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "graphql": "^16.6.0",
    "graphql-tag": "^2.12.6",
    "jsonwebtoken": "^8.5.1",
    "node-tradfri-client": "^3.1.1",
    "ws": "^8.9.0"
  },
  "devDependencies": {
    "@apollo/client": "^3.6.9",
    "@graphql-codegen/cli": "^2.13.5",
    "@graphql-codegen/near-operation-file-preset": "^2.4.1",
    "@graphql-codegen/typescript": "^2.7.3",
    "@graphql-codegen/typescript-operations": "^2.5.3",
    "@graphql-codegen/typescript-resolvers": "^2.7.3",
    "@storybook/addon-actions": "^6.5.12",
    "@storybook/addon-essentials": "^6.5.12",
    "@storybook/addon-links": "^6.5.12",
    "@storybook/builder-webpack5": "^6.5.12",
    "@storybook/manager-webpack5": "^6.5.12",
    "@storybook/node-logger": "^6.5.12",
    "@storybook/preset-create-react-app": "^4.1.2",
    "@storybook/react": "^6.5.12",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.3",
    "@swc/register": "^0.1.10",
    "@types/jest": "^29.0.3",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^18.7.19",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@types/ws": "^8.5.3",
    "antd": "^4.23.2",
    "chromatic": "^6.9.0",
    "husky": "^8.0.1",
    "nodemon": "^2.0.20",
    "npm-check-updates": "^16.3.2",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.4.0",
    "react-scripts": "5.0.1",
    "react-use-websocket": "^4.2.0",
    "storybook-addon-apollo-client": "^4.0.12",
    "typescript": "^4.8.3"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  }
}
