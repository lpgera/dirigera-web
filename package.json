{
  "name": "tradfri-web-ui",
  "version": "0.1.0",
  "private": true,
  "homepage": ".",
  "dependencies": {
    "@apollo/client": "^3.4.16",
    "@lpgera/ts-env": "^1.1.2",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.4.1",
    "@types/ws": "^8.2.0",
    "antd": "^4.16.13",
    "apollo-server": "^3.4.0",
    "apollo-server-express": "^3.4.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "graphql": "^15.6.1",
    "graphql-tag": "^2.12.5",
    "jsonwebtoken": "^8.5.1",
    "node-tradfri-client": "^3.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1",
    "react-scripts": "4.0.3",
    "react-use-websocket": "^2.8.0",
    "ts-node": "^10.3.0",
    "typescript": "^4.4.4",
    "ws": "^8.2.3"
  },
  "scripts": {
    "watch:frontend": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "authenticate": "ts-node --transpile-only --project ./server/tsconfig.json -r dotenv/config ./server/tradfri/authenticate.ts",
    "server": "ts-node --transpile-only --project ./server/tsconfig.json -r dotenv/config ./server/index.ts",
    "watch:backend": "nodemon --ext ts,json --watch server --exec ts-node --project ./server/tsconfig.json -r dotenv/config ./server/index.ts",
    "generate": "graphql-codegen -r dotenv/config",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.2.1",
    "@graphql-codegen/near-operation-file-preset": "^2.1.6",
    "@graphql-codegen/typescript": "^2.2.4",
    "@graphql-codegen/typescript-operations": "^2.1.8",
    "@graphql-codegen/typescript-resolvers": "^2.3.2",
    "@storybook/addon-actions": "^6.3.12",
    "@storybook/addon-essentials": "^6.3.12",
    "@storybook/addon-links": "^6.3.12",
    "@storybook/node-logger": "^6.3.12",
    "@storybook/preset-create-react-app": "^3.2.0",
    "@storybook/react": "^6.3.12",
    "@types/jest": "^27.0.2",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/node": "^16.11.0",
    "@types/react": "^17.0.30",
    "@types/react-dom": "^17.0.9",
    "chromatic": "^6.0.4",
    "husky": "^4.3.0",
    "nodemon": "^2.0.13",
    "prettier": "^2.4.1",
    "pretty-quick": "^3.1.1",
    "storybook-addon-apollo-client": "^4.0.9"
  }
}
