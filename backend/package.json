{
  "name": "backend",
  "scripts": {
    "authenticate": "dirigera authenticate",
    "build": "swc src -d dist --strip-leading-paths",
    "graphql-codegen": "graphql-codegen",
    "start": "node --env-file=../.env dist/index.js",
    "start-without-env-file": "node dist/index.js",
    "test": "globstar -- node -r @swc/register --test \"./**/*.test.ts\"",
    "test-watch": "globstar -- node -r @swc/register --watch --test \"./**/*.test.ts\"",
    "watch": "node --watch --env-file=../.env -r @swc/register src/index.ts"
  },
  "dependencies": {
    "@apollo/server": "^4.12.0",
    "@graphql-tools/schema": "^10.0.23",
    "@graphql-tools/utils": "^10.8.6",
    "@lpgera/ts-env": "^1.2.5",
    "body-parser": "^2.2.0",
    "compression": "^1.8.0",
    "dirigera": "^1.4.0",
    "express": "^5.1.0",
    "graphql": "^16.11.0",
    "graphql-tag": "^2.12.6",
    "jsonwebtoken": "^9.0.2",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.6",
    "@graphql-codegen/typescript": "^4.1.6",
    "@graphql-codegen/typescript-resolvers": "^4.5.1",
    "@swc/cli": "0.7.4",
    "@swc/core": "^1.11.24",
    "@swc/register": "^0.1.10",
    "@types/compression": "^1.7.5",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.15.12",
    "@types/ws": "^8.18.1",
    "globstar": "^1.0.0",
    "typescript": "^5.8.3"
  },
  "volta": {
    "extends": "../package.json"
  }
}
