{
  "name": "backend",
  "scripts": {
    "authenticate": "dirigera authenticate",
    "build": "swc src -d dist",
    "graphql-codegen": "graphql-codegen",
    "start": "node -r dotenv/config dist/index.js dotenv_config_path=../.env",
    "test": "globstar -- node -r @swc/register --test \"./**/*.test.ts\"",
    "test-watch": "globstar -- node -r @swc/register --watch --test \"./**/*.test.ts\"",
    "watch": "nodemon --ext ts,json --exec node -r @swc/register -r dotenv/config src/index.ts dotenv_config_path=../.env"
  },
  "dependencies": {
    "@apollo/server": "^4.9.5",
    "@graphql-tools/schema": "^10.0.0",
    "@graphql-tools/utils": "^10.0.8",
    "@lpgera/ts-env": "^1.2.5",
    "body-parser": "^1.20.2",
    "dirigera": "^0.11.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "graphql-tag": "^2.12.6",
    "jsonwebtoken": "^9.0.2",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-resolvers": "^4.0.1",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.96",
    "@swc/register": "^0.1.10",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.9.0",
    "@types/ws": "^8.5.9",
    "globstar": "^1.0.0",
    "nodemon": "^3.0.1",
    "typescript": "^5.2.2"
  }
}
